*****ODD OR EVEN IN ARRAY*****
# include <stdio.h>
int main()
{
	int n,a[20];
	printf("enter the size of array: ");
	scanf("%d", &n);
	printf("enter the elements in array : \n");
	for(int i=0;i<n;i++)
	{
		scanf("%d",&a[i]);
	}
	printf("even numbers in array are:\n");
	for(int i =0; i<n ; i++)
	{
		if(a[i]%2==0)
		printf("%d \t",a[i]);
	}
	printf("\nodd numbers in array are:\n");
	for(int i =0; i<n ; i++)
	{
		if(a[i]%2!=0)
		printf("%d \t",a[i]);
	}
	return 0;
	
}
OUTPUT
enter the size of array: 5
enter the elements in array :
2
3
4
5
6
even numbers in array are:
2       4       6
odd numbers in array are:
3       5
